{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2022",
    "lib": ["ES2022"],
    "sourceMap": true,
    "rootDir": ".",
    "strict": false,
    "noEmit": true,
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "Node16",
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", ".vscode-test", "dist"]
}
