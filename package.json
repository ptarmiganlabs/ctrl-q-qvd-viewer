{
  "name": "ctrl-q-qvd-viewer",
  "displayName": "Ctrl-Q QVD Viewer",
  "description": "View Qlik Sense and QlikView QVD files from within VS Code",
  "version": "0.0.4",
  "publisher": "ptarmiganlabs",
  "icon": "media/ctrl-q-logo-no-text.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/ptarmiganlabs/qvd4vscode.git"
  },
  "license": "MIT",
  "keywords": [
    "qvd",
    "qlik",
    "qlik sense",
    "qlikview",
    "ctrl-q",
    "butler",
    "vscode",
    "extension",
    "data viewer",
    "file viewer",
    "parquet",
    "avro",
    "arrow",
    "excel",
    "csv",
    "json",
    "xml"
  ],
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Data Science",
    "Visualization",
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ctrl-q-qvd-viewer.openQvd",
        "title": "Open QVD File",
        "category": "QVD"
      },
      {
        "command": "ctrl-q-qvd-viewer.about",
        "title": "About",
        "category": "QVD"
      }
    ],
    "customEditors": [
      {
        "viewType": "ctrl-q-qvd-viewer.qvdEditor",
        "displayName": "Ctrl-Q QVD Viewer",
        "selector": [
          {
            "filenamePattern": "*.qvd"
          },
          {
            "filenamePattern": "*.QVD"
          }
        ],
        "priority": "default"
      }
    ],
    "configuration": {
      "title": "Ctrl-Q QVD Viewer",
      "properties": {
        "ctrl-q-qvd-viewer.maxPreviewRows": {
          "type": "number",
          "default": 5000,
          "description": "Maximum number of rows to load from the QVD file for preview and pagination",
          "minimum": 100,
          "maximum": 100000
        },
        "ctrl-q-qvd-viewer.qlikInlineDelimiter": {
          "type": "string",
          "default": "tab",
          "enum": [
            "tab",
            "pipe",
            "comma",
            "semicolon",
            "auto-detect"
          ],
          "enumDescriptions": [
            "Tab character (\\t) - Good general purpose delimiter",
            "Pipe character (|) - Recommended when data contains commas",
            "Comma (,) - Standard CSV-style, but may conflict with data",
            "Semicolon (;) - Alternative to comma",
            "Auto-detect - Automatically choose the best delimiter based on data content"
          ],
          "description": "Default delimiter for Qlik Sense inline load script exports. You can override this during each export."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "package": "node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "pretest": "npm run lint",
    "test": "vscode-test",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.2",
    "esbuild": "^0.25.11",
    "eslint": "^9.36.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "apache-arrow": "^21.1.0",
    "avsc": "^5.7.9",
    "exceljs": "^4.4.0",
    "js-yaml": "^4.1.0",
    "papaparse": "^5.5.3",
    "parquetjs": "^0.11.2",
    "qvdjs": "^0.6.2",
    "sql.js": "^1.13.0",
    "xml-js": "^1.6.11"
  }
}
